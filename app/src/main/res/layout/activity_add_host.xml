<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_host"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzb.sl.deviceManagement.HostManage.AddHostActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:id="@+id/host_add_add_Table"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@drawable/title"
               android:gravity="center_vertical">
               <ImageView
                   android:id="@+id/host_add_add_img2"
                   android:layout_width="28dp"
                   android:layout_height="28dp"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/right" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:gravity="center_horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/AddHost"
                       android:textColor="@color/bg_white"
                       android:textSize="20dp" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="10dp"
                   android:gravity="right">
                   <ImageView
                       android:id="@+id/host_add_add_img3"
                       android:layout_width="22dp"
                       android:layout_height="22dp"
                       android:layout_gravity="right"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/preservation" />
               </LinearLayout>
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/host_add_info_rl_pro"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/host_add_add_Table"
               android:layout_marginTop="1dp"
               android:background="@color/bg_white">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="@string/project"
                       android:textSize="18dp" />

                   <Spinner
                       android:id="@+id/host_add_info_pro"
                       android:layout_width="200dp"
                       android:layout_height="35dp"
                       android:layout_marginBottom="10dp"
                       android:layout_marginRight="40dp"
                       android:maxLength="12"
                       android:layout_marginTop="10dp"
                       android:background="@drawable/eadtext"
                       android:gravity="center"
                       android:singleLine="true"
                       />
               </LinearLayout>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/host_add_info_rl_hostName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/bg_white"
               android:layout_below="@+id/host_add_info_rl_pro"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:layout_weight="1"
                       android:gravity="center"

                       android:text="@string/HostName"
                       android:textSize="18dp" />

                   <EditText
                       android:id="@+id/host_add_info_hostName"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"
                       android:layout_marginRight="40dp"
                       android:maxLength="12"
                       android:layout_marginTop="10dp"
                       android:background="@drawable/eadtext"
                       android:gravity="center" />
               </LinearLayout>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/host_add_info_rl_regpack"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/host_add_info_rl_hostName"
               android:layout_marginTop="1dp"
               android:background="@color/bg_white">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="@string/RegPackage"
                       android:textSize="18dp" />

                   <EditText
                       android:id="@+id/host_add_info_regpack"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"
                       android:layout_marginRight="40dp"
                       android:maxLength="6"
                       android:digits="1234567890"
                       android:layout_marginTop="10dp"
                       android:background="@drawable/eadtext"
                       android:gravity="center" />
               </LinearLayout>
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/host_add_info_rl_heart"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/host_add_info_rl_regpack"
               android:layout_marginTop="1dp"
               android:background="@color/bg_white">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="@string/Heart"
                       android:textSize="18dp" />

                   <EditText
                       android:id="@+id/host_add_info_heart"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"
                       android:layout_marginRight="40dp"
                       android:layout_marginTop="10dp"
                       android:maxLength="6"
                       android:digits="1234567890"
                       android:background="@drawable/eadtext"
                       android:gravity="center" />
               </LinearLayout>
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/host_add_info_rl_lognitude"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/host_add_info_rl_heart"
               android:layout_marginTop="1dp"
               android:background="@color/bg_white">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="@string/longitude"
                       android:textSize="18dp" />

                   <EditText
                       android:id="@+id/host_add_info_lognitude"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"
                       android:layout_marginRight="40dp"
                       android:layout_marginTop="10dp"
                       android:maxLength="11"
                       android:background="@drawable/eadtext"
                       android:focusable="false"
                       android:gravity="center" />
               </LinearLayout>
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/host_add_info_rl_latitude"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/host_add_info_rl_lognitude"
               android:layout_marginTop="1dp"
               android:background="@color/bg_white">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="@string/latitude"
                       android:textSize="18dp" />

                   <EditText
                       android:id="@+id/host_add_info_latitude"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"
                       android:layout_marginRight="40dp"
                       android:focusable="false"
                       android:layout_marginTop="10dp"
                       android:background="@drawable/eadtext"
                       android:gravity="center" />
               </LinearLayout>
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/host_add_info_rl_phone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/host_add_info_rl_latitude"
               android:layout_marginTop="1dp"
               android:background="@color/bg_white"

               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="@string/Telephone"
                       android:textSize="18dp" />

                   <EditText
                       android:id="@+id/host_add_info_phone"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"
                       android:layout_marginRight="40dp"
                       android:layout_marginTop="10dp"
                       android:maxLength="20"
                       android:digits="1234567890-"
                       android:background="@drawable/eadtext"
                       android:gravity="center" />
               </LinearLayout>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/host_add_info_rl_adderss"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/host_add_info_rl_phone"
               android:layout_marginTop="1dp"
               android:background="@color/bg_white"

               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="@string/address"
                       android:textSize="18dp" />

                   <EditText
                       android:id="@+id/host_add_info_adderss"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"
                       android:layout_marginRight="40dp"
                       android:layout_marginTop="10dp"
                       android:maxLength="20"
                       android:background="@drawable/eadtext"
                       android:gravity="center" />
               </LinearLayout>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/host_add_info_rl_bezhu"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/host_add_info_rl_adderss"
               android:layout_marginTop="1dp"
               android:background="@color/bg_white"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="@string/note"
                       android:textSize="18dp" />

                   <EditText
                       android:id="@+id/host_add_info_bezhu"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"
                       android:layout_marginRight="40dp"
                       android:layout_marginTop="10dp"
                       android:maxLength="20"
                       android:background="@drawable/eadtext"
                       android:gravity="center" />
               </LinearLayout>
           </RelativeLayout>
       </RelativeLayout>
   </ScrollView>

</RelativeLayout>
