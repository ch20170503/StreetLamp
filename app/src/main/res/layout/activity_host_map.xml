<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_host_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzb.mapController.HostMap">
    <RelativeLayout
        android:id="@+id/host_jw_list_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/host_jw_list_img2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/right" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LatitudeAndLongitudeSelection"
                android:textColor="@color/bg_white"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
    <com.amap.api.maps2d.MapView
        android:id="@+id/host_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/host_jw_list_rl">
    </com.amap.api.maps2d.MapView>
</RelativeLayout>
