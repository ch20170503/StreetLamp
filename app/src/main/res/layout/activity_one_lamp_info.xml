<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_one_lamp_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzb.sl.TimeController.OneLampController.OneLampInfoActivity">
    <RelativeLayout
        android:id="@+id/onelampInfo_list_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/onelampInfo_list_img2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/right" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lampInfo"
                android:textColor="@color/bg_white"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/onelampInfo_list_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/onelampInfo_list_rl">
        <RelativeLayout
            android:id="@+id/onelampInfo_list_sv_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/onelampInfo_list_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oneLampC"
                android:textSize="18dp"
                android:textColor="#f000"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
              />
            <LinearLayout
                android:id="@+id/onelampInfo_list_rl_temp_control"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/bg_white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_below="@id/onelampInfo_list_text1">
              <!--  <com.leynew.CustomView.LampControlView
                    android:id="@+id/onelampInfo_list_temp_control"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true" />-->
                <Button
                    android:id="@+id/btn_1_closes"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_close"
                    android:textColor="@color/bg_white"
                    android:text="0"
                    />
                <SeekBar
                    android:id="@+id/onelampInfo_list_temp_control"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progressDrawable="@drawable/seekbar_style2"
                    android:focusable="true"
                    android:thumb="@drawable/shape_point_circular"
                    android:splitTrack="false"
                    android:maxHeight="15dp"
                    android:minHeight="15dp"
                    ></SeekBar>
                <Button
                    android:id="@+id/btn_1_opens"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_close"
                    android:textColor="@color/bg_white"
                    android:text="100"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/onelampInfo_list_rl_temp_control"
                android:gravity="center"
                android:background="@color/bg_white"
                android:id="@+id/lamp_info_img22222"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/Brightness"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/huadongonelamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>
            <TextView
                android:id="@+id/onelampInfo_list_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lampInfo"
                android:textSize="18dp"
                android:textColor="#f000"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/lamp_info_img22222"/>
            <RelativeLayout
                android:id="@+id/onelampInfo_list_rl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:layout_below="@id/onelampInfo_list_text2">
                <LinearLayout
                    android:id="@+id/onelampInfo_list_ll_info"
                    android:layout_width="match_parent"
                    android:background="@color/bg_white"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textb"
                            android:text="@string/numbs"
                            android:textColor="@color/bg_white"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/onelampInfo_numb"
                            android:layout_width="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textb"
                            android:text="@string/type"
                            android:textColor="@color/bg_white"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/onelampInfo_type"
                            android:layout_width="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/onelampInfo_list_ll_info1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/bg_white"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:layout_below="@id/onelampInfo_list_ll_info">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textb"
                            android:text="@string/Port"
                            android:textColor="@color/bg_white"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/onelampInfo_port"
                            android:layout_width="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textb"
                            android:text="@string/Brightnes"
                            android:textColor="@color/bg_white"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/onelampInfo_Brightnes"
                            android:layout_width="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/onelampInfo_list_ll_info2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/bg_white"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:layout_below="@id/onelampInfo_list_ll_info1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textb"
                            android:text="@string/Voltage"
                            android:textColor="@color/bg_white"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/onelampInfo_Voltage"
                            android:layout_width="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textb"
                            android:text="@string/Electriccurrent"
                            android:textColor="@color/bg_white"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/onelampInfo_Electriccurrent"
                            android:layout_width="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/onelampInfo_list_ll_info3"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:background="@color/bg_white"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:layout_below="@id/onelampInfo_list_ll_info2">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textb"
                            android:text="@string/power"
                            android:textColor="@color/bg_white"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/onelampInfo_power"
                            android:layout_width="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textb"
                            android:text="@string/frequency"
                            android:textColor="@color/bg_white"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/onelampInfo_frequency"
                            android:layout_width="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"

                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
