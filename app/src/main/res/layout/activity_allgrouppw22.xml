<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/tdg"
            android:layout_width="match_parent"
            android:background="@drawable/textb"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/bg_white"
            android:gravity="center"
            android:text="@string/DimmingPortSelection"
            />
        <com.wx.wheelview.widget.WheelView
            android:id="@+id/whev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@id/tdg">
        </com.wx.wheelview.widget.WheelView>
      <LinearLayout
          android:id="@+id/select_dialog_listviewasdad"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/whev"
          android:gravity="center"
          android:layout_marginTop="25dp"
          android:layout_centerVertical="true">
          <Button
              android:id="@+id/btn_1_closeag"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:background="@drawable/button_close"
              android:textColor="@color/bg_white"
              android:text="0"
              />
          <SeekBar
              android:id="@+id/tempg_control"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:max="100"
              android:progressDrawable="@drawable/seekbar_style2"
              android:focusable="true"
              android:thumb="@drawable/shape_point_circular"
              android:maxHeight="15dp"
              android:minHeight="15dp"
              android:splitTrack="false"

              ></SeekBar>
          <Button
              android:id="@+id/btn_1_openag"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:textColor="@color/bg_white"
              android:background="@drawable/button_open"
              android:text="100"
              />
      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/select_dialog_listviewasdad"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/Brightness"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/huadong22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="0"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>