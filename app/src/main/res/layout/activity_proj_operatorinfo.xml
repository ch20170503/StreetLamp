<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_proj_operatorinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzb.sl.UserBasicsInfo.PorjActivity.ProjOperatorinfoActivity">

    <RelativeLayout
        android:id="@+id/operatorczy_info_Table"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/operatorczy_info_img2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ProjectInformation"
                android:textColor="@color/bg_white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="right">
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/opczy_info_rl_zh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/operatorczy_info_Table"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:text="@string/projectName"
                    android:gravity="center"
                    android:background="@drawable/textb"
                    android:textColor="@color/bg_white" />

                <TextView
                    android:id="@+id/orgczy_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:textColor="#f000" />
            </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/opczy_info_rl_lxr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opczy_info_rl_zh"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="@string/contact"
                android:gravity="center"
                android:background="@drawable/textb"
                android:textColor="@color/bg_white" />

            <TextView
                android:id="@+id/orgczy_text_lxr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#f000" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/opczy_info_rl_dh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opczy_info_rl_lxr"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="@string/Telephone"
                android:gravity="center"
                android:background="@drawable/textb"
                android:textColor="@color/bg_white" />

            <TextView
                android:id="@+id/orgczy_text_dh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#f000" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/opczy_info_rl_dz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opczy_info_rl_dh"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="@string/address"
                android:gravity="center"
                android:background="@drawable/textb"
                android:textColor="@color/bg_white" />

            <TextView
                android:id="@+id/orgczy_text_dz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#f000" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/opczy_info_rl_xmsm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opczy_info_rl_dz"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="@string/note"
                android:gravity="center"
                android:background="@drawable/textb"
                android:textColor="@color/bg_white" />

            <TextView
                android:id="@+id/orgczy_text_xmsm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#f000" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
