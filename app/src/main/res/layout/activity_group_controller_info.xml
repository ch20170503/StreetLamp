<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group_controller_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    tools:context="com.zzb.sl.TimeController.GroupController.GroupControllerInfoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/groupCont_info_list_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/title"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/groupCont_info_list_img2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/right" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/groupinfo"
                        android:textColor="@color/bg_white"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/groupCont_info_list_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/Port"
                android:layout_marginTop="10dp"
                android:background="@color/bg_white"
                android:layout_below="@id/groupCont_info_list_rl"/>
            <RelativeLayout
                android:id="@+id/groupCont_info_list_rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"

                android:layout_below="@id/groupCont_info_list_text">
                <com.wx.wheelview.widget.WheelView
                    android:id="@+id/groupCont_info_list_wv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    >
                </com.wx.wheelview.widget.WheelView>
                <LinearLayout
                    android:id="@+id/lamp_info_img2sdas"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/groupCont_info_list_wv"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/btn_1_closeG"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/button_close"
                        android:textColor="@color/bg_white"
                        android:text="0"
                        />
                    <SeekBar
                        android:id="@+id/groupCont_info_list_tempg_control"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progressDrawable="@drawable/seekbar_style2"
                        android:focusable="true"
                        android:thumb="@drawable/shape_point_circular"
                        android:maxHeight="15dp"
                        android:minHeight="15dp"
                        android:splitTrack="false"
                        ></SeekBar>
                    <Button
                        android:id="@+id/btn_1_openG"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textColor="@color/bg_white"
                        android:background="@drawable/button_open"
                        android:text="100"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@id/lamp_info_img2sdas"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/Brightness"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/huadongoneGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/groupCont_info_list_rl2">
                <LinearLayout
                    android:id="@+id/groupCont_info_list_ll1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/bg_white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textb"
                        android:textColor="@color/bg_white"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:text="@string/groupname"/>
                    <TextView
                        android:id="@+id/groupCont_info_list_textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/groupCont_info_list_ll2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/groupCont_info_list_ll1"
                    android:layout_marginTop="3dp"
                    android:background="@color/bg_white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textb"
                        android:textColor="@color/bg_white"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="@string/groupnumb"/>
                    <TextView
                        android:id="@+id/groupCont_info_list_textNumb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/groupCont_info_list_ll3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/groupCont_info_list_ll2"
                    android:layout_marginTop="3dp"
                    android:background="@color/bg_white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textb"
                        android:textColor="@color/bg_white"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="@string/GroupingContent"/>
                    <TextView
                        android:id="@+id/groupCont_info_list_textNumb3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
