<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_operator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.zzb.sl.UserBasicsInfo.OperatorActivity.AddOperatorActivity">
    <RelativeLayout
        android:id="@+id/operator_add_Table"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/operator_add_img2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/right" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AddOperator"
                android:textColor="@color/bg_white"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="right">
            <ImageView
                android:id="@+id/operator_add_img3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:src="@drawable/preservation" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/op_add_rl_zh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/operator_add_Table"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/AccountNumber"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/op_add_zh"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:maxLength="12"
                android:layout_marginTop="10dp"
                android:background="@drawable/eadtext"
                android:gravity="center"
                android:singleLine="true" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/op_add_rl_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/op_add_rl_zh"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/password"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/op_add_pwd"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:maxLength="12"
                android:layout_marginTop="10dp"
                android:background="@drawable/eadtext"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/op_add_rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/op_add_rl_pwd"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/FullName"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/op_add_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:maxLength="8"
                android:background="@drawable/eadtext"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/op_add_rl_Nname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/op_add_rl_name"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/NickName"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/op_add_Nname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:maxLength="6"
                android:layout_marginTop="10dp"
                android:background="@drawable/eadtext"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/op_add_rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/op_add_rl_Nname"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Telephone"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/op_add_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:digits="1234567890"
                android:maxLength="11"
                android:background="@drawable/eadtext"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/op_add_rl_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/op_add_rl_phone"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Email"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/op_add_email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/eadtext"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/op_add_rl_bezhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/op_add_rl_email"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/note"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/op_add_bezhu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:maxLength="20"
                android:background="@drawable/eadtext"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
